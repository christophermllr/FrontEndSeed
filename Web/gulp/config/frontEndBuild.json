{
	"isProduction": false,
	"useSourceMaps": true,
	"root": "./",
	"browserSyncName": "main",
	"paths":{
		"source":{
			"base":"src",
			"bower": "bower_components",
			"semantic": "semantic",
			"tsd": "typings/tsd.d.ts",
			"styles": "src/less",			
			"themes": "src/less/themes",
			"lessMain": "src/less/app.less"
		},
		"output":{
			"dist": "dist",
		  	"dev":{
				"base": "./dev",
  			 	"styles": "dev/css",
				"scripts":"dev/js",
			    "templates": "./dev",
			 	"lib": "dev/lib",
				"semantic": "dev/semantic"
			  }
			
		},		
		"test": {
			"base": "tests",
			"config": "tests/karma.conf.js"
		},
		"clean": [ "js", "css", "views", "index.html"],
		"typings": "typings"
	},
    "ports":{
		"LIVERELOAD_PORT": 35729,
		"SERVER_PORT": 9000,
		"BrowserSync": 3000,        
		"E2E_PORT": 3099	
	},
	"jsonProxy":{
		"devProxyTarget": "http://localhost:9999",
		"qaProxyTarget": "http://localhost:9999"
	},
	"globs": {
		"jade": "*.jade",
		"html": "*.html",
		"less": "*.less",
		"css": "*.css",
		"typescript": "*.ts",
		"javascript": "*.js"				
	},
	"version": "1.0.0"
}