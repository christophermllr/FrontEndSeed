{
	"isProduction": false,
	"useSourceMaps": true,
	"root": "./",
	"paths":{
		"source":{
			"base":"src",
			"bower": "bower_components",
			"tsd": "typings/tsd.d.ts",
			"styles": "src/less",			
			"themes": "src/less/themes",
			"lessMain": "src/less/app.less"
		},
		"output":{
			"dist": "wwwroot",
		  	"dev": "wwwroot"
		},
		"temp":{
			"base": ".tmp",
  			"styles": ".tmp/css",
			"scripts":".tmp/js",
			"templates": "./.tmp"
		},
		"test": {
			"base": "tests",
			"config": "tests/karma.conf.js"
		},
		"clean": [ "js", "css", "views", "index.html"],
		"typings": "typings"
	},
    "ports":{
		"LIVERELOAD_PORT": 35729,
		"SERVER_PORT": 9000,        
		"E2E_PORT": 3000
	},
	
	"globs": {
		"jade": "*.jade",
		"html": "(*.html|*.htm)",
		"less": "*.less",
		"css": "*.css",
		"typescript": "*.ts",
		"javascript": "*.js"				
	},
	"version": "1.0.0"
}